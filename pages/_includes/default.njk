<body class="landing">
	<div id="page-wrapper">
		<!-- Nav -->
		<header id="header">
			<h1 id="logo"><a href="https://fluxconsult.com"><img src="/img/fluxcon-logo-white.svg" alt="Fluxcon"></a></h1>
			<nav id="nav">
				<ul>
					<li><a href="/">IoT Home</a></li>
					<li>
						<a href="/hardware">Hardware</a>
						{% if collections.hardware %}
						<ul>
							{%- for page in collections.hardware -%}
							<li class="align-right"><a href="{{ page.url }}">{{ page.data.subtitle }}</a></li>
							{%- endfor -%}
						</ul>
						{%- endif -%}
					</li>
					<li>
						<a href="/solutions">Solutions</a>
						{% if collections.solutions %}
						<ul>
							{%- for page in collections.solutions -%}
							<li class="align-right"><a href="{{ page.url }}">{{ page.data.subtitle }}</a></li>
							{%- endfor -%}
						</ul>
						{%- endif -%}
					</li>
					<li><a href="/coverage">Coverage</a></li>
					<li><a href="/offering">Offering</a></li>
					<li><a href="/contact" class="button primary">Contact</a></li>
				</ul>
			</nav>
		</header>

		<!-- Page -->
		{{ content | safe }}

		<!-- Footer -->
		<footer id="footer">
			<ul class="icons">
				<li><a href="https://twitter.com/fluxcon" class="icon brands alt fa-twitter"><span class="label">Twitter</span></a></li>
				<li><a href="https://facebook.com/fluxcon" class="icon brands alt fa-facebook-f"><span class="label">Facebook</span></a></li>
				<li><a href="mailto:iot@fluxconsult.com" class="icon solid alt fa-envelope"><span class="label">Email</span></a></li>
			</ul>
			<a href="{{ topper }}" class="goto-first scrolly">Top</a>
			<ul class="copyright">
				<li>&copy; Fluxcon {{ year }}.</li>
				<li>Design: <a href="https://html5up.net" target="_blank" rel="noreferrer noopener">HTML5 UP</a></li>
			</ul>
		</footer>

		<!-- scripts -->
		<script src="/assets/js/jquery.min.js"></script>
		<script src="/assets/js/jquery.scrolly.min.js"></script>
		<script src="/assets/js/jquery.dropotron.min.js"></script>
		<script src="/assets/js/jquery.scrollex.min.js"></script>
		<script src="/assets/js/browser.min.js"></script>
		<script src="/assets/js/breakpoints.min.js"></script>
		<script src="/assets/js/util.js"></script>
		<script src="/assets/js/main.js"></script>
